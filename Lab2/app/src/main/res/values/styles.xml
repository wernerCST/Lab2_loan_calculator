<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="app_bg" parent="android:style/Theme.Black">
        <item name="android:background">@drawable/pika</item>
    </style>
    <style name="result_text">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="header">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/header</item>
    </style>
    <style name="labels">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/labels</item>
    </style>

</resources>
